<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Suite_Main" allow-return-values="true" verbose="1" parallel="tests" thread-count="3">

