            <class name="TestNgTest">
                <methods>
                    <include name="testTitle" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="runTestScenarioC">
        <parameter name="browser" value="ghost"/>
        <parameter name="propertyFinder.url" value="https://www.propertyfinder.ae/"/>
        <classes>
            <class name="TestNgTest">
                <methods>
                    <include name="testTitle" />
                </methods>
            </class>
        </classes>
